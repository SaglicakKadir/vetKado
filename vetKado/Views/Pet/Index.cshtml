@model IEnumerable<vetKado.Entity.Pet>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    <a asp-action="Create" class="btn btn-primary">Create New Pet</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Tür</th>
            <th>Irk</th>
            <th>Yaş</th>
            <th>Sahibi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Species</td>
                <td>@item.Breed</td>
                <td>@item.Age</td>
                <td>@item.Owner?.Name</td> <!-- Sahibi için bir isim örneği -->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PetId">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.PetId">Detay</a> |
                    <a asp-action="Delete" asp-route-id="@item.PetId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
