@model IEnumerable<vetKado.Entity.Owner>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    <a asp-action="Create" class="btn btn-primary">Create New Owner</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Telefon</th>
            <th>Adres</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Phone</td>
                <td>@item.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OwnerId">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@item.OwnerId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>



